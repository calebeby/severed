{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "moduleDetection": "force",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "dist",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "types": ["vitest/importMeta"]
  },
  "references": [{ "path": "./packages/severed" }]
}
